<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailNews"
    android:background="#234CAF50"
    android:paddingBottom="10dp"
    >
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4CAF50"
        android:gravity="fill"
        android:padding="10dp"
        android:text="Detail News"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold" /><!--Header-->
    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/barlowcondensedmedium"
        android:text="Judul Berita"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/news_tumbnail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/data_border_radius" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/affairs_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/affairs_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlowcondensedthin"
                android:text="Sumber Berita"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/date_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlowcondensedthin"
                android:text="Rilis Berita"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:id="@+id/news_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/barlowcondensed"
        android:text="Detail Berita"
        android:textColor="#000000"
        android:textSize="12dp"
        android:justificationMode="inter_word"
        android:paddingBottom="20dp"
        android:layout_marginBottom="10dp"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>